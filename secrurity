# Security Group for RDS
resource "aws_security_group" "rds" {
  name        = "grocerymate-rds-sg"
  description = "Allow database access from app servers only"
  vpc_id      = aws_vpc.main.id

  # Ingress rule to allow EC2 app server access
  ingress {
    from_port       = 5432
    to_port         = 5432
    protocol        = "tcp"
    security_groups = [aws_security_group.app.id]  # optional if you have an EC2 app
    # OR
    # cidr_blocks = ["10.0.0.0/16"]  # allow from VPC only
  }

  # Egress rule to allow outbound traffic
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "grocerymate-rds-sg"
  }
}

